{
  "name": "Color picker",
  "description": "You can pick a color from the web",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "icons": {
    "16": "./images/icon.png",
    "32": "./images/icon.png",
    "48": "./images/icon.png",
    "128": "./images/icon.png"
  }
}
